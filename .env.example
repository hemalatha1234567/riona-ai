# ====================================
# RIONA AI AGENT - Environment Configuration
# ====================================
# Copy this file to .env and fill in your values

# -------------------------------------
# GENERAL CONFIGURATION
# -------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# -------------------------------------
# BACKEND SERVER
# -------------------------------------
BACKEND_PORT=3000
BACKEND_HOST=localhost
API_VERSION=v3

# -------------------------------------
# FRONTEND SERVER
# -------------------------------------
FRONTEND_PORT=3001
FRONTEND_HOST=localhost

# -------------------------------------
# INSTAGRAM CREDENTIALS
# -------------------------------------
IG_USERNAME=your_instagram_username
IG_PASSWORD=your_instagram_password
IG_USE_2FA=false
IG_2FA_SECRET=

# -------------------------------------
# OLLAMA AI CONFIGURATION
# -------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:20b
OLLAMA_TIMEOUT=120000
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=500
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40

# -------------------------------------
# AI PERSONALITY SETTINGS
# -------------------------------------
AI_PERSONALITY=friendly_professional
AI_LANGUAGE=en
AI_USE_EMOJIS=true
AI_EMOJI_FREQUENCY=moderate
AI_HASHTAG_COUNT=30
AI_CONTENT_STYLE=engaging

# -------------------------------------
# DATABASE CONFIGURATION
# -------------------------------------
# MongoDB
MONGODB_URI=mongodb://localhost:27017/riona_ai
MONGODB_DB_NAME=riona_ai
MONGODB_USER=
MONGODB_PASSWORD=

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=riona:

# -------------------------------------
# AUTHENTICATION & SECURITY
# -------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d
API_KEY=your-api-key-for-external-access
ENCRYPTION_KEY=your-32-character-encryption-key

# -------------------------------------
# RATE LIMITING
# -------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# -------------------------------------
# WEBSOCKET CONFIGURATION
# -------------------------------------
WS_PORT=3002
WS_CORS_ORIGIN=http://localhost:3001
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# -------------------------------------
# FILE UPLOAD
# -------------------------------------
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4
UPLOAD_DIRECTORY=./uploads

# -------------------------------------
# EMAIL CONFIGURATION (Optional)
# -------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@riona-ai.com

# -------------------------------------
# MONITORING & ANALYTICS
# -------------------------------------
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# -------------------------------------
# EXTERNAL APIS (Optional)
# -------------------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
UNSPLASH_ACCESS_KEY=
PEXELS_API_KEY=

# -------------------------------------
# FEATURE FLAGS
# -------------------------------------
FEATURE_AI_CHAT=true
FEATURE_AUTO_ENGAGE=true
FEATURE_CAMPAIGN_BUILDER=true
FEATURE_ANALYTICS=true
FEATURE_MULTI_ACCOUNT=false
FEATURE_TEAM_COLLABORATION=false

# -------------------------------------
# DEVELOPMENT TOOLS
# -------------------------------------
DEBUG=riona:*
FORCE_COLOR=1
